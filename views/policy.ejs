<table border="1">
    <tr>
        <th>Policy ID</th>
        <td><%= policy.policy_id %></td>
    </tr>
    <tr>
        <th>Policy Type</th>
        <td><%= policy.policy_type %></td>
    </tr>
    <tr>
        <th>Start Date</th>
        <td><%= new Intl.DateTimeFormat('en-GB').format(new Date(policy.start_date)) %></td>
    </tr>
    <tr>
        <th>End Date</th>
        <td><%= new Intl.DateTimeFormat('en-GB').format(new Date(policy.end_date)) %></td>
    </tr>
    <tr>
        <th>Premium Amount</th>
        <td><%= policy.premium_amount %></td>
    </tr>
    <tr>
        <th>Coverage Amount</th>
        <td><%= policy.coverage_amount %></td>
    </tr>
</table>

<button>
    <a href="/payment/<%= policy.policy_id %>">Pay Coverage</a>
</button>



<h1>Transaction Details for <%= policy.policy_id %></h1>
<table border="1">
    <thead>
        <tr>
            <th>Payment ID</th>
            <th>Payment Date</th>
            <th>Amount Paid</th>
            <th>Amount Left</th>
        </tr>
    </thead>
    <tbody>
        <% payments.forEach(payment => { %>
            <tr>
                <td><%= payment.payment_id %></td>
                <td><%= new Intl.DateTimeFormat('en-GB').format(new Date(payment.payment_date)) %></td>
                <td><%= payment.amount_paid %></td>
                <td><%= payment.amount_left %></td>
            </tr>
        <% }); %>
    </tbody>
</table>